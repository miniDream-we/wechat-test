/* pages/components/calendar/calendar.wxss */
.calendar-area {
  width: 700rpx;
  margin: 0 auto;
}
.calendar-box {
  width: 100%;
  height: 100%;
  line-height: 1;
  vertical-align: top;
}
.caleadar-item {
  width: 98rpx;
  height: 98rpx;
  border-top: 1rpx solid #eee;
  display: inline-block;
  overflow: hidden;
  font-size: 16rpx;
  position: relative;
  padding:4rpx 2rpx;
  margin: 0;
  vertical-align: top;
}
.calendar-title {
  margin-bottom: 20rpx;
  text-align: right;
  padding-right:40rpx;
  font-weight: 300;
}
.caleadar-item .day{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 36rpx;
  font-weight: 300;
}
.caleadar-item.empty{
  border-top-color: transparent;
}
.caleadar-item.header{
  text-align: center;
  font-size: 20rpx;
  line-height: 40rpx;
  height: auto;
  color: #999;
}
